generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  username   String @id @db.VarChar(20)
  password   String @db.VarChar(60)
  url_wallet String @db.VarChar

  party_users    PartyUsers[]   @relation("UserToPartyUsers")
  users_payments UsersPayment[] @relation("UserToUsersPayment")
  parties        Party[]        @relation()

  @@map("users")
}

model Party {
  id            String   @id @default(uuid()) @db.Uuid
  name          String   @db.VarChar(50)
  quantity      Decimal  @db.Decimal(12, 2)
  period        String   @db.VarChar
  description   String?  @db.Text
  created_at    DateTime @default(now())
  created_by_id String   @db.VarChar(20)
  lock_access   Boolean  @default(false)

  party_users    PartyUsers[]   @relation("PartyToPartyUsers")
  users_payments UsersPayment[] @relation("PartyToUsersPayment")

  creator_by User @relation(fields: [created_by_id], references: [username])

  @@map("party")
}

model PartyUsers {
  party_id      String @db.Uuid
  user_username String

  party Party @relation("PartyToPartyUsers", fields: [party_id], references: [id])
  user  User  @relation("UserToPartyUsers", fields: [user_username], references: [username])

  @@id([party_id, user_username])
  @@map("party_users")
}

model UsersPayment {
  quantity_expected Decimal  @db.Decimal(12, 2)
  party_id          String   @db.Uuid
  user_username     String
  is_paid           Boolean  @default(false)
  period_paid       DateTime
  party             Party    @relation("PartyToUsersPayment", fields: [party_id], references: [id])
  user              User     @relation("UserToUsersPayment", fields: [user_username], references: [username])

  @@id([party_id, user_username])
  @@map("users_payment")
}
